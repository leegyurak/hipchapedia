# Anthropic API Key
ANTHROPIC_API_KEY=your-api-key-here

# MySQL Database Settings
DB_NAME=hipchapedia
DB_USER=root
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=3306

# Flyway (for Gradle tasks)
DB_URL=jdbc:mysql://localhost:3306/hipchapedia?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC

# Application
PORT=8000

# Logging
SHOW_SQL=false
SQL_LOG_LEVEL=INFO

# Spring profile
SPRING_PROFILES_ACTIVE=dev

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_REQUEST_CHANNEL=lyrics:requests
REDIS_RESULT_CHANNEL=lyrics:results
